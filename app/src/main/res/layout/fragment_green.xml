<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <Button
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btn_getgallery"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_below="@id/btn_getgallery"
        android:id="@+id/iv_beforesendpost"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <TextView
        android:background="#f1a2a2"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_below="@id/iv_beforesendpost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:hint="Text to post"
        android:id="@+id/tv_textToPost"
        android:minHeight="42dp" />

<!--    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_postText"
        android:layout_below="@+id/iv_beforesendpost"
        android:hint="text to post"
        android:layout_weight="0.91"
        android:maxLength="2000"/>-->


    <Button
        android:id="@+id/btn_post"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_textToPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post" />


</RelativeLayout>