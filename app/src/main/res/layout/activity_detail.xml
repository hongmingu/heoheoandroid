<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="1dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingBottom="1dp"
    tools:context="com.example.keepair.myapplication.DetailActivity"
    android:scrollbars="none">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/iv_photo_detail"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_below="@id/iv_photo_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:id="@+id/tv_author_detail" />

        <TextView
            android:layout_below="@id/tv_author_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:id="@+id/tv_text_detail" />

    </RelativeLayout>

</ScrollView>
